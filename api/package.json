{
  "name": "our-garden-api",
  "version": "0.0.1",
  "description": "API app for Our Garden App",
  "main": "src/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run serve",
    "build-ts": "tsc",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "cross-env DEBUG=neo4j-graphql-js tsc -w",
    "watch-node": "nodemon src/index.ts",
    "seedDb": "ts-node src/seed/seed-db.ts"
  },
  "author": "William Lyon",
  "license": "GPLv3",
  "dependencies": {
    "@apollo/client": "^3.1.3",
    "apollo-server": "^2.14.2",
    "apollo-server-lambda": "^2.14.2",
    "csv-parse": "^4.10.1",
    "dotenv": "^7.0.0",
    "express-pino-logger": "^5.0.0",
    "neo4j-driver": "^4.0.2",
    "neo4j-graphql-js": "^2.14.2",
    "node-fetch": "^2.6.0",
    "pino": "^6.7.0",
    "pino-colada": "^2.1.0",
    "react": "^16.13.1"
  },
  "devDependencies": {
    "@types/async": "^3.2.3",
    "@types/eslint": "^7.2.4",
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-eslint-cli": "^5.0.0",
    "shx": "^0.3.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
